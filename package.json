    "connect-mongo": "0.8.2",
    "cookie-parser": "1.4.0",
    "errorhandler": "1.4.2",
    "express": "4.13.3",
    "express-flash": "0.0.2",
    "express-session": "1.12.0",
    "express-validator": "2.17.1",
    "feed": "0.2.6",
    "github-api": "0.7.0",
    "gulp": "3.9.0",
    "gulp-image-resize": "0.6.0",
    "gulp-imagemin": "2.3.0",
    "hbs": "3.1.1",
    "knex": "0.8.6",
    "lodash": "2.4.2",
    "lusca": "1.3.0",
    "mailgun-js": "0.7.3",
    "markdown-it": "5.0.0",
    "method-override": "1.0.2",
    "moment": "2.10.6",
    "mongoose": "3.8.23",
