{
  "name": "nodeza",
  "version": "0.2.0",
  "description": "Node.js portal for developers in South Africa",
  "main": "index.js",
  "scripts": {
    "start": "env NODE_ENV=development node index.js",
    "dev": "env NODE_ENV=development nodemon index.js",
    "cleanup": "find . -type f -name '*~' -exec rm -f {} ;",
    "jshint": "jshint models collections controllers lib sql routes widgets test app.js dbconnect.js server.js index.js lib/auth.js",
    "test": "./node_modules/mocha/bin/mocha test",
    "setup": "node sql/dbsetup.js && node sql/migrate.js",
    "postmerge": "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nodeza/nodeza.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Qawelesizwe Mlilo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodeza/nodeza/issues"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "feed": "0.2.6",
    "github-api": "0.7.0",
    "lodash": "2.4.2",
    "mailgun-js": "0.7.3",
    "markdown-it": "5.0.0",
    "moment": "^2.10.6",
    "passport": "^0.2.2",
    "passport-github": "1.0.0",
    "passport-local": "1.0.0",
    "request": "2.65.0",
    "rss": "0.3.2",
    "twitter": "^1.2.5",
    "type-is": "^1.6.12",
    "unidecode": "0.1.7",
    "when": "3.7.4",
    "widget-cms": "^0.2.10"
  },
  "devDependencies": {
    "chai": "^3.4.0",
    "chalk": "^1.1.1",
    "jshint": "^2.8.0",
    "mocha": "^2.3.3",
    "simple-prompt": "^0.2.1",
    "superagent": "1.4.0",
    "supertest": "^1.1.0",
    "uglify-js": "^2.5.0"
  },
  "engines": {
    "node": "0.10.x",
    "npm": "1.3.x"
  }
}
