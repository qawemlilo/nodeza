{
  "name": "nodeza",
  "version": "1.0.0",
  "description": "Node.js portal for developers in South Africa",
  "main": "index.js",
  "scripts": {
    "migrate": "knex migrate:latest && knex seed:run",
    "start": "export NODE_ENV=staging && nodemon index.js",
    "debug": "export NODE_ENV=staging && node --inspect index.js",
    "production": "export NODE_ENV=production && pm2 start index.js --name='NodeZA'",
    "dev": "export NODE_ENV=development && nodemon",
    "staging": "export NODE_ENV=staging && nodemon",
    "test": "export NODE_ENV=testing && ./node_modules/mocha/bin/mocha test",
    "setup": "node db/init.js",
    "postmerge": "npm install"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nodeza/nodeza.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Qawelesizwe Mlilo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodeza/nodeza/issues"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.5.2",
    "express-redis-cache": "^1.1.3",
    "express-validator": "^5.3.0",
    "ghreleases": "^2.0.2",
    "hbs": "^4.1.1",
    "jquery": "^3.6.0",
    "knex": "^0.19.5",
    "lodash": "^4.17.19",
    "lusca": "^1.5.2",
    "mailgun-js": "^0.21.0",
    "markdown-it": "^8.4.2",
    "minimatch": "^3.0.4",
    "moment": "^2.29.2",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "popper.js": "^1.14.4",
    "redis": "^2.8.0",
    "rss": "^1.2.2",
    "sqlite3": "^4.0.2",
    "twit": "^2.2.11",
    "twitter": "^1.2.5",
    "type-is": "^1.6.16",
    "unidecode": "^0.1.8",
    "widget-cms": "^1.4.3",
    "widget-knex-schema": "latest",
    "widget-loader": "^1.0.1"
  },
  "devDependencies": {
    "bootstrap": "^4.6.0",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "gulp": "^4.0.0",
    "gulp-image-resize": "^0.13.1",
    "gulp-imagemin": "^4.1.0",
    "mocha": "^5.2.0",
    "simple-prompt": "^0.2.1",
    "standard": "^11.0.1",
    "supertest": "^3.3.0"
  }
}
