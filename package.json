    "mocha": "^2.5.2",
    "simple-prompt": "^0.2.1",
    "supertest": "^1.1.0",
    "uglify-js": "^2.5.0"
  },
  "engines": {
    "node": "0.10.x",
    "npm": "1.3.x"
  }
