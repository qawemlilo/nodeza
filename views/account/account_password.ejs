
<ul class="nav nav-tabs" style="margin-bottom: 20px;">
  <li><a href="/account"><span class="glyphicon glyphicon-user"></span> Profile Information</a></li>
  <li class="active"><a href="/account/password"><i class="fa fa-keyboard-o"></i> Change Password</a></li>
  <li><a href="/account/linked"><i class="fa fa-chain"></i> Linked Accounts</a></li>
</ul>


<div class="panel panel-default">
  <div class="panel-heading">
    Change Password
  </div>
  
  <div class="panel-body">
    <form class="form-horizontal" id="signup-form" action="/account/password" method="POST"  >
  
      <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        
      <div class="form-group">
        <label class="col-sm-3 control-label" for="password">Password</label>
        <div class="col-sm-7">
          <input class="form-control" type="password" name="password" id="password" placeholder="Password" required="">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label" for="confirmPassword">
          Confirm Password
        </label>
        <div class="col-sm-7">
          <input class="form-control" type="password" name="confirm" id="confirm" placeholder="Confirm Password" required="">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
          <button class="btn btn-success" type="submit">
            <i class="fa fa-keyboard-o"></i> Change Password
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

