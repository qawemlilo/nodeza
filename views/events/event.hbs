

{{#extend "navigation"}}
  {{> navigation}}
{{/extend}}

{{#extend "jumbotron"}}
<div id="jumbotron" class="jumbotron">
  <div class="container">
    <h1>Events</h1>
  </div>
</div>
{{/extend}}

<div class="col-sm-9 blog-main">
  {{> flash}}

  <div class="container-fluid">

    <div class="row" id="eventVenue" style="height: 250px;background-color:#F5F5F5">
    </div>

    <div class="row" style="margin-bottom: 40px;">
      <div class="event panel panel-default">
        <div class="panel-body">
          <h2 class="blog-post-title">
            {{myEvent.title}}
          </h2>
          <p class="blog-post-meta">
            <span class="glyphicon glyphicon-map-marker"></span>
            <a href="{{myEvent.url}}" target="_blank">
              map
            </a> |
            <span class="glyphicon glyphicon-tag"></span>
            {{myEvent.city}}
            {{#if myEvent.website}}
             | <span class="glyphicon glyphicon-globe"></span>
             <a href="{{myEvent.website}}" target="_blank">website</a>
            {{/if}}
            {{#eventLabel myEvent.dt}}{{/eventLabel}}
          </p>

          <p>{{{myEvent.html}}}</p>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6" style="text-align: left">
              <span class="glyphicon glyphicon-calendar text-danger"></span> {{#parseDate myEvent.dt ''}}{{/parseDate}}
            </div>

            <div class="col-md-6" style="text-align: right">
              <span class="glyphicon glyphicon-time text-danger"></span> {{parseTime}}
            </div>
          </div>
        </div>
      </div>
    </div>

   {{#if config.showComments}}
      <div id="disqus_thread"></div>
    {{/if}}
  </div>
</div>

{{> sidebar}}


{{#extend "footer"}}
  {{> footer}}
{{/extend}}


{{#extend "scripts"}}
<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script src="/js/jquery.geocomplete.min.js"></script>
<script src="/js/maps.js"></script>
<script>
  var map = new GMaps({
    div: '#eventVenue',
    lat: "{{myEvent.lat}}",
    lng: "{{myEvent.lng}}"
  });

  map.addMarker({
    lat: {{myEvent.lat}},
    lng: {{myEvent.lng}},
    title: '{{myEvent.title}}',
    infoWindow: {
      content: '<p>{{myEvent.address}}</p>'
    }
  });
</script>
{{#if config.showComments}}
<script type="text/javascript">
  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
  var disqus_shortname = 'nodeza'; // required: replace example with your forum shortname

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function() {
    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
</script>
{{/if}}
{{/extend}}
