

{{#extend "navigation"}}
  {{> navigation}}
{{/extend}}


{{> leftsidebar}}

<div class="col-sm-9 blog-main">

  {{> flash}}

  <ul class="nav nav-tabs" style="margin-bottom: 20px;">
    <li>
      <a href="/admin/menus">
        <span class="glyphicon glyphicon-folder-open"></span> Menus
      </a>
    </li>
    <li class="active">
      <a href="/admin/links">
        <span class="glyphicon glyphicon-link"></span> Links
      </a>
    </li>
    <li>
      <a href="/admin/routes">
        <span class="glyphicon glyphicon-road"></span> Routes
      </a>
    </li>
    <a role="button" href="/links/new" class="btn btn-danger pull-right">
      <span class="glyphicon glyphicon-link"></span> New Link
    </a>
  </ul>

  <div class="container-fluid">
    <div class="row" style="margin-top:5px;">
      <div class="alert alert-info" role="alert">
        <p>
          <span class="fa fa-info text-warning"></span> 
          Creating a link requires a <a class="text-danger" href="/account/menus">Menu</a> and a <a class="text-danger" href="/account/routes">Route</a>, make sure you create those first. 
        </p>
      </div>

      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th style="text-align:center" class="active">
              ID
            </th>
            <th>
              Link
            </th>
            <th>
              Menu
            </th>
            <th>
              Route
            </th>
            <th>
            </th>
            <th>
            </th>
          </tr>
        </thead>
  
        <tbody>
          {{#each links}}
            <tr>
              <td style="text-align:center" class="active">
                {{id}}
              </td>
              <td>
                <span class="glyphicon glyphicon-{{icon}}"></span>
                <a href="/links/edit/{{id}}" title="Edit">{{inner_text}}</a>
              </td>
              <td>
                {{menu.name}}
              </td>
              <td>
                <a href="{{route.path}}" target="_blank" title="View route" class="text-danger">
                  {{route.path}}
                </a>
              </td>
              </td>
              <td style="text-align:center">
                <a href="/links/edit/{{id}}" title="Edit">
                  <span class="glyphicon glyphicon-pencil"></span>
                </a> 
              </td>
              <td style="text-align:center">
                <a href="/links/delete/{{id}}" onclick="return confirm('Are you sure you want to delete that item?')" class="text-danger delete-post" title="Delete">
                  <span class="glyphicon glyphicon-trash"></span> 
                </a> 
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  
    {{> pagination}}
  
  </div>
</div>


{{#extend "footer"}}
  {{> footer}}
{{/extend}}
