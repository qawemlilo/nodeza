

{{#extend "navigation"}}
  {{> navigation}}
{{/extend}}


{{> leftsidebar}}

<div class="col-sm-9 blog-main">

  {{> flash}}

  <ul class="nav nav-tabs" style="margin-bottom: 20px;">
    <li>
      <a href="/account/blog">
        <span class="glyphicon glyphicon-list-alt"></span> Posts
      </a>
    </li>

    <li class="active">
      <a href="/account/blog/categories">
        <span class="glyphicon glyphicon-align-justify"></span> Categories
      </a>
    </li>
    <a role="button" href="/category/new" class="btn btn-danger pull-right">
      <span class="glyphicon glyphicon-align-justify"></span> New Category
    </a>
  </ul>

  <div class="container-fluid">
    <div class="row" style="margin-top:5px;">
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th style="text-align:center" class="active">
              ID
            </th>
            <th>
              Name
            </th>
            <th>
              Description
            </th>
            <th>
            </th>
            <th>
            </th>
          </tr>
        </thead>
  
        <tbody>
          {{#each categories}}
            <tr>
              <td style="text-align:center" class="active">
                {{id}}
              </td>
              <td>
                <a href="/category/edit/{{id}}">{{name}}</a>
                <a href="/blog/category/{{slug}}" target="_blank" title="View Post" class="text-danger">
                  <small><span class="glyphicon glyphicon-new-window"></span></small>
                </a>
              </td>
              <td>
                {{description}}
              </td>
              <td style="text-align:center">
                <a href="/category/edit/{{id}}" title="Edit">
                  <span class="glyphicon glyphicon-pencil"></span>
                </a> 
              </td>
              <td style="text-align:center">
                <a href="/category/delete/{{id}}" onclick="return confirm('Are you sure you want to delete that post?')" class="text-danger delete-post" title="Delete">
                  <span class="glyphicon glyphicon-trash"></span> 
                </a> 
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  
    {{> pagination}}
  
  </div>
</div>


{{#extend "footer"}}
  {{> footer}}
{{/extend}}

