

{{#extend "navigation"}}
  {{> navigation}}
{{/extend}}


{{> leftsidebar}}

<div class="col-sm-9 blog-main">

  <div class="container-fluid">
    <div class="row" style="margin-top:5px;">
      {{#ifCond conversations.length '===' 0}}
         <div class="col-sm-12" style="text-align:center">
           <span class="glyphicon glyphicon-envelope" style="display:block;font-size:60px;opacity:0.2;margin-top:100px;"></span>
           Your message inbox is empty.
         </div>
      {{/ifCond}}

      <div class="list-group">
        {{#each conversations}}
          {{#printMessage this ../user}}{{/printMessage}}
        {{/each}}
     </div>

     {{#ifCond pagination.pageCount '>' 1}}
       <div class="row" style="text-align: center">
         <ul class="pagination">
           {{#paginator pagination}}{{/paginator}}
         </ul>
       </div>
     {{/ifCond}}

   </div>
  </div>
</div>


{{#extend "footer"}}
  {{> footer}}
{{/extend}}
